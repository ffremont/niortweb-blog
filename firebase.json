{
  "hosting": {
    "public": "public",
    "site":"niortweb",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
      "source": "/api/**",
      "function": "api"
    }],
    "redirects": [ {
      "source": "/agenda",
      "destination": "https://app.niortweb.fr/widget",
      "type": 301
    } ]
  },
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  }
}
